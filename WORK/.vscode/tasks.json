{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "g++",
        "type": "process",
        "command": "g++",
        "args": ["-g","${file}","-o","${fileDirname}/${fileBasenameNoExtension}.exe"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
          "echo": true,
          "reveal": "always",
          "focus": false,
          "panel": "shared",
          "showReuseMessage": true,
          "clear": false
      }
      }
    ]
  }